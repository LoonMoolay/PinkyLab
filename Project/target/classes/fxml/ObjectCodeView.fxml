<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--
    This is a starter FXML file for the Object Code Generator
    Your colleague can open this in Scene Builder 2.0 and customize it

    To open in Scene Builder:
    1. Right-click this file in your IDE
    2. Select "Open in Scene Builder"
    3. Design the GUI visually

    Important: Keep the fx:id values (codeOutputArea) as they're linked to the controller
-->

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.mavenproject1.javafx.controllers.ObjectCodeController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f4f4f4;">

    <!-- Top Section: Title and Buttons -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Optimized Assembly Code Generator" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="24.0" />
                    </font>
                </Label>

                <HBox HBox.hgrow="ALWAYS" />

                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Save to File" onAction="#handleSave" 
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="120" prefHeight="35">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Button>

                    <Button text="Close" onAction="#handleClose" 
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="100" prefHeight="35">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Button>
                </HBox>
            </HBox>

            <!-- Info Label -->
            <Label text="x86 Assembly with Register Allocation, Constant Folding, and Peephole Optimization" 
                   textFill="#ecf0f1">
                <font>
                    <Font name="Arial" size="12.0" />
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Center Section: Code Output -->
    <center>
        <VBox spacing="10" BorderPane.margin="$x1">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <Label text="Generated Assembly Code:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />

            <!-- This TextArea is linked to the controller via fx:id -->
            <TextArea fx:id="codeOutputArea" 
                      editable="false" 
                      wrapText="false"
                      VBox.vgrow="ALWAYS"
                      style="-fx-font-family: 'Courier New'; -fx-font-size: 12px; -fx-control-inner-background: #2c3e50; -fx-text-fill: #00ff00;">
            </TextArea>
        </VBox>
    </center>

</BorderPane>
